@model MarvelMonitors.Models.MonitorsScreenSizeModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<form asp-controller="Monitors" asp-action="Index" method="GET">@* calls the monitors controller and the index method*@
    <p>
        <select asp-for="MonitorScreenSize" asp-items="Model.ScreenSizes">
            <option value="">All</option>
        </select>

        Title: <input type="text" asp-for="SearchString"/>
        <input type="submit" value="Filter" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Monito[0].ModelName)  @*Displays the column name from the database*@
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Monito[0].PanelTechnology)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Monito[0].Manufacturer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Monito[0].ScreenSize)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Monito[0].RefreshRate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Monito[0].Resolution)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Monito[0].Features)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Monito[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Monito[0].Rating)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Monito)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ModelName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PanelTechnology)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Manufacturer)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ScreenSize)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RefreshRate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Resolution)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Features)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rating)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>
